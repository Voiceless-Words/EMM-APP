
<form action="/createjobcard" method="post">
  <div class="form-group">
    <label for="jobcard">Jobcard Number:</label>
    <input type="text" class="form-control" id="jobcard">
  </div>
  <div class="form-group">
    <label for="assest">Asset:</label>
    <select class="form-control">
      <option>GE7736</option>
    </select>
  </div>

    <div class="form-group">
    <label for="description">Asset Description:</label>
    <select class="form-control">
      <option>MV SUBSTATION - 7C2 JAVA CRESCENT</option>
    </select>
  </div>


  <div class="form-group">
    <label for="duedate">Required By:</label>
    <input id="datepicker" class="form-control" width="276" />      
  </div>

    <div class="form-group">
    <label for="activity">Activity:</label>
    <select class="form-control">
      <option>Primary Substation Inspection</option>
      <option>Secondary Substation Inspection</option>
    </select>
  </div>

     <div class="form-group">
    <label for="assign">Assign Job Card (Upto 3 Employees)</label>
    <select class="form-control">
      <option>Anist</option>
      <option>Bill</option>
      <option>Collin</option>
      <option>Dag</option>
    </select>
  </div>
  
  <button type="submit" class="btn btn-primary">Create Job Card</button>
</form>