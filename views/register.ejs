

<% include templates/head %>
<div class="wrapper">

    <div class="row no-margin">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
        <div class="container">
        <div class="login-container">
            <div class="avatar"></div>
            <div class="form-box">
                <form accesskey="" method="POST" id="registerForm">
                    <div class="form-group">
                        <!-- <label for="regEmployeeId">Employee ID</label> -->
                        <input type="tel" class="form-control" id="regEmployeeId" placeholder="Employee number" pattern="[0-9]{7}" required>
                    </div>
                    <div class="form-group">
                        <!-- <label for="regFirstName">First name</label> -->
                        <input type="text" class="form-control" id="regFirstName" placeholder="First name" required>
                    </div>
                    <div class="form-group">
                        <!-- <label for="regLastName">Last name</label> -->
                        <input type="text" class="form-control" id="regLastName" placeholder="Last name" required>
                    </div>
                    <div class="form-group">
                        <!-- <label for="regContactNumbers">Contact Numbers</label> -->
                        <input type="text" class="form-control" id="regContactNumbers" placeholder="Contact number" pattern="[0-9]{10}" required>
                    </div>
                    <div class="form-group">
                        <!-- <label for="regPassword">password</label> -->
                        <input type="hidden" class="form-control" id="regPassword" value="123456" required minlength=6 maxlength=6 disabled>
                    </div>
                    <button type="submit" class="btn btn-primary">Add user</button>
                    <div class="status"></div>
                </form>
            </div>
        </div>
        </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="clear"></div>
    </div>
<% include templates/footer %>